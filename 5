#include <stdio.h>
#include <Math.h>

int main()
{
	//Задаем точки
	float x1, x2, x3, y1, y2, y3;
	printf_s("x1: "); //Вывод надписи
	scanf_s("%f", &x1); //Ввод информации
	printf_s("x2: "); //Вывод надписи
	scanf_s("%f", &x2); //Ввод информации
	printf_s("x3: "); //Вывод надписи
	scanf_s("%f", &x3); //Ввод информации
	printf_s("y1: "); //Вывод надписи
	scanf_s("%f", &y1); //Ввод информации
	printf_s("y2: "); //Вывод надписи
	scanf_s("%f", &y2); //Ввод информации
	printf_s("y3: "); //Вывод надписи
	scanf_s("%f", &y3); //Ввод информации
	//Вычисляем расстояние между точками
	float a = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
	float b = sqrt((x1 - x3) * (x1 - x3) + (y3 - y1) * (y3 - y1));
	float c = sqrt((x2 - x3) * (x2 - x3) + (y3 - y2) * (y3 - y2));
	float p = a + b + c; //Вычисляем периметр
	float p2 = (a + b + c) / 2; //Вычисляем полупериметр для нахождения площади
	float s = sqrt(p2 * (p2 - a) * (p2 - b) * (p2 - c)); //Вычисляем площадь
	//Выводим полученные данные
	printf_s("%f\n", p);
	printf_s("%f", s);
	return 0; //Выход
}
