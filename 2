#include <stdio.h>

int main()
{
	//Задаем точки
	int A, B, C;
	printf_s("A: "); //Вывод надписи
	scanf_s("%d", &A); //Ввод информации
	printf_s("B: "); //Вывод надписи
	scanf_s("%d", &B); //Ввод информации
	printf_s("C: "); //Вывод надписи
	scanf_s("%d", &C); //Ввод информации
	//Вычисляем длину отрезков
	int AC = C - A;
	int BC = C - B;
	int sum = AC + BC; //Складываем длины отрезков
	//Выводим полученные данные
	printf_s("%i\n", AC);
	printf_s("%i\n", BC);
	printf_s("%i", sum);
	return 0; //Конец
}
