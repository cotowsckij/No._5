#include <stdio.h>

int main()
{
    //Задаем координаты точек
    int x1 = 5; 
    int x2 = 8;
    int y1 = 11;
    int y2 = 50;
    //Вычисляем длины
    int a = x2 - x1; 
    int b = y2 - y1;
    int p = 2 * a + 2 * b; //Вычисляем периметр
    int s = a * b; //Вычисляем площадь
    //Выводим полученные данные
    printf_s("%i\n", p);
    printf_s("%i", s);
    return 0; //Выход
}
