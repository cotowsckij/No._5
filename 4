#include <stdio.h>

int main()
{
	//Задаем точки
	int x1, x2, y1, y2;
	printf_s("x1: "); //Вывод надписи
	scanf_s("%d", &x1); //Ввод информации
	printf_s("x2: "); //Вывод надписи
	scanf_s("%d", &x2); //Ввод информации
	printf_s("y1: "); //Вывод надписи
	scanf_s("%d", &y1); //Ввод информации
	printf_s("y2: "); //Вывод надписи
	scanf_s("%d", &y2); //Ввод информации
	//Вычисляем длины
	int a = x2 - x1;
	int b = y2 - y1;
	int p = 2 * a + 2 * b; //Вычисляем периметр
	int s = a * b; //Вычисляем площадь
	//Выводим полученные данные
	printf_s("%i\n", p);
	printf_s("%i", s);
	return 0; //Выход
}
